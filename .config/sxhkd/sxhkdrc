#
# wm independent hotkeys
#

# terminal emulator
super + Return
	kitty

# program launcher
super + {_,shift + }d
	rofi -show {drun,run -config /home/apro/.config/rofi/run.rasi}

# make sxhkd reload its configuration files:
super + {_,shift + }r
	{pkill -USR1 -x sxhkd,bspc wm -r}

# take screenshot of selected area
ctrl + Insert
	scrot -s -e 'xclip -selection clipboard -t image/png < $f && mv $f ~/.screenshots/' --line style=solid,mode=edge '%Y-%m-%d-%H.%M.%S_$wx$h.png'

# take screenshot of focused monitor
Insert
	/home/apro/.local/bin/sxhkd/fullmon-screenshot.py


### bspwm hotkeys


# quit/restart bspwm
super + shift + x
	bspc quit

# close and kill
super + {_,shift + }q
	bspc node -{c,k}



### state/flags


# set the window state
super + {u,i,shift + space,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# focus/swap


# focus the node in the given direction
# super + {_,shift + }{h,j,k,l}
# 	bspc node -{f,s} {west,south,north,east}

# focus the next/previous window in the current desktop
super + {_,shift + }{j,k}
	bspc node -{f,s} {next,prev}.local.window

# focus the other monitor
super + {_,shift + }{comma,period}
	bspc {monitor -f,node -m} {prev,next}

# focus the next occupied workspace
alt + {_,shift + }Tab
	bspc desktop -f {next,prev}.occupied.local

# focus/move node to a specific desktop
super + {_,shift + }{plus,ecaron,scaron,ccaron,rcaron,zcaron,yacute,aacute,iacute}
	bspc {desktop -f,node -d} {1,2,3,4,5,6,7,8,9}.local

# rotate the desktop's tree
super + {_, shift +}dead_diaeresis
	bspc node any.local -R {90,270} 

# swap the current node and the biggest window
super + space
	bspc node -s biggest.window.local

# switch between tiled and monocle layouts
super + {t,y}
	bspc desktop -l {tiled,monocle}

### move/resize


# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
