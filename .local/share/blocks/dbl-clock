#!/bin/sh

case $BUTTON in
	1) kitty -e calcurse ;;
	2) notify-send "ğŸ“… Clock Block" "Left Click -> Calendar\nRight Click -> Terminal Clock" ;;
	3) kitty -e tty-clock -scC 5 ;;
	6) kitty -e nvim "$0" ;;
esac

hour=$(date "+%I")
case $hour in
	01)	tpref="ğŸ•" ;;
	02)	tpref="ğŸ•‘" ;;
	03)	tpref="ğŸ•’" ;;
	04)	tpref="ğŸ•“" ;;
	05)	tpref="ğŸ•”" ;;
	06)	tpref="ğŸ••" ;;
	07)	tpref="ğŸ•–" ;;
	08)	tpref="ğŸ•—" ;;
	09)	tpref="ğŸ•˜" ;;
	10)	tpref="ğŸ•™" ;;
	11)	tpref="ğŸ•š" ;;
	12)	tpref="ğŸ•›" ;;
esac

time=$(date "+%I:%M %p")
date=$(date "+%d %b (%a)")
dpref="ğŸ“…"

echo "$dpref $date | $tpref $time "
